{% from "components/button.njk" import redcrossButton %}
{% from "components/progression.njk" import redcrossProgression %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}

{% extends "_layout.njk" %}

{% block content %}

<div class="govuk-width-container">

  <main class="govuk-main-wrapper">

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-full">
        {{ redcrossProgression({ active: "1"}) }}
      </div>
    </div>

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-full">
        {{ govukBackLink({
          text: "Back",
          href: "/find-two-ways",
          classes: "redcross-back-link"
        }) }}
      </div>
    </div>

    <div class="redcross-content__box">

      <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">

          <h1 class="govuk-heading-xl">1. Registering missing people</h1>
        </div>
      </div>

      <div class="govuk-grid-row">
        <div class="govuk-grid-column-one-half">
          <p class="govuk-body govuk-!-font-weight-bold">1. Registering missing people</p>
          <img src="/assets/images/trace-the-face-1.png" alt="Image of a a caseworker and client pointing at a computer screen showing faces of people looking for their family.">
          <p class="govuk-body">We keep a record of all people who are looking for their family via the Red Cross.</p>
          <p class="govuk-body">Relatives can search for each other via the Red Cross, and if they are over 18, they can also search online.</p>
        </div>

        <div class="govuk-grid-column-one-half">
          <p class="govuk-body">
            <img class="redcross-image--icon" src="/assets/images/private.svg"/>
            <span class="govuk-!-font-weight-bold">It's private:</span> Your information is only shared with the Red Cross.
          </p>
          <p class="govuk-body">
            <img class="redcross-image--icon" src="/assets/images/quick.svg"/>
            <span class="govuk-body govuk-!-font-weight-bold">It's quick:</span> You can register online, or at your local Red Cross tracing service.
          </p>
          <p class="govuk-body">
            <img class="redcross-image--icon" src="/assets/images/red-check.svg"/>
            <span class="govuk-body govuk-!-font-weight-bold">It can work:</span> 42 people found their family this way in 2019.
          </p>
          <h4 class="govuk-heading-s">This service is right for people who:</h4>
          <p class="govuk-body">
            <img class="redcross-image--icon" src="/assets/images/green-check.svg"/>
            Want to keep their search private, to protect themselves, and their relatives.
          </p>
          <p class="govuk-body govuk-!-font-weight-bold">or</p>
          <p class="govuk-body">
            <img class="redcross-image--icon" src="/assets/images/green-check.svg"/>
            Don't have much information about their relatives or where they might be.
          </p>
        </div>
      </div>

      <br>

      <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">

          {{ redcrossButton({
            text: "Find out more",
            href: "/finding-searching",
            attributes: { id: "find-out-more-button" }
          }) }}
          <br/>
          {{ redcrossButton({
            text: "skip to check eligibility",
            href: "/check-eligibility",
            classes: "redcross-button--secondary",
            attributes: { id: "skip-to-check-button" }
          }) }}
        </div>
      </div>
    </div>

  </main>
</div>

{% endblock %}}
