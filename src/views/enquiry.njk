{% from "components/button.njk" import redcrossButton %}
{% from "components/progression.njk" import redcrossProgression %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}

{% extends "_layout.njk" %}

{% block content %}

    <div class="govuk-width-container">

        <main class="govuk-main-wrapper">

            <div class="govuk-grid-row">
                <div class="govuk-grid-column-full">

                    {{ redcrossProgression({ active: "1"}) }}
                </div>
            </div>

            <div class="govuk-grid-row">
                <div class="govuk-grid-column-full">

                    {{ govukBackLink({
                    text: "Back",
                    href: "/",
                    classes: "redcross-back-link"
                }) }}
                </div>
            </div>

            <div class="govuk-grid-row">
                <div class="govuk-grid-column-full">

                    <div class="redcross-content__box">
                        <h1>Make an enquiry</h1>
                        <ol>
                            <li>Find out what we do</li>
                            <li>Check which service you are eligible for</li>
                            <li>Submit an enquiry</li>
                        </ol>
                        {{ redcrossButton({
                        text: "Start",
                        href: "/what-help"
                    }) }}
                    </div>
                </div>
            </div>

        </main>
    </div>

{% endblock %}}
