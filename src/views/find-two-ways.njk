{% from "components/button.njk" import redcrossButton %}
{% from "components/progression.njk" import redcrossProgression %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}

{% extends "_layout.njk" %}

{% block content %}

  <div class="govuk-width-container">

    <main class="govuk-main-wrapper">

      <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">

          {{ redcrossProgression({ active: "1"}) }}
        </div>
      </div>

      <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">

          {{ govukBackLink({
                    text: "Back",
                    href: "/what-help",
                    classes: "redcross-back-link"
                }) }}
        </div>
      </div>

      <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">

          <div class="redcross-content__box">
            <h1 class="govuk-heading-xl">We find familes in two ways:</h1>

            <p><span style="color:red;">&lt;Need images for this page&gt;<span></p>

            {{ redcrossButton({
                            text: "Find out more",
                            href: "/what-help"
                        }) }}
            <br/>
            {{ redcrossButton({
                            text: "skip to check eligibility",
                            href: "/check-eligibility",
                            classes: "redcross-button--secondary",
                            attributes: { id: "skip-to-check-button" }
                        }) }}
          </div>
        </div>
      </div>

    </main>
  </div>

{% endblock %}}
