{% from "components/button.njk" import redcrossButton %}
{% from "components/progression.njk" import redcrossProgression %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}

{% extends "_layout.njk" %}

{% block content %}

  <div class="govuk-width-container">

    <main class="govuk-main-wrapper">

      <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
          {{ redcrossProgression({ active: "1"}) }}
        </div>
      </div>

      <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
          {{ govukBackLink({
                    text: "Back",
                    href: "/what-help",
                    classes: "redcross-back-link"
                }) }}
        </div>
      </div>

      <div class="redcross-content__box">

        <div class="govuk-grid-row">
          <div class="govuk-grid-column-full">
              <h1 class="govuk-heading-xl">We find familes in two ways:</h1>
          </div>
        </div>

        <div class="govuk-grid-row">
          <div class="govuk-grid-column-one-half">
            <h2>1. Registering missing people</h2>
            <p>Your family can find you online, or in any of the 141 Red Cross countries worldwide.</p>
            <img src="/assets/images/trace-the-face-1.png" alt="Image of a a caseworker and client pointing at a computer screen showing faces of people looking for their family.">
          </div>

          <div class="govuk-grid-column-one-half">
            <h2>2. Actively looking for relatives</h2>
            <p>Give us info about your relatives so that we can go out and look for them.</p>
            <img src="/assets/images/red-cross-volunteer-bike.png" alt="Image of a uniformed Red Cross volunteer on a bike, searching for family in a rural village in the Congo.">
          </div>
        </div>

        <br/>

        <div class="govuk-grid-row">
          <div class="govuk-grid-column-full">
              {{ redcrossButton({
                text: "Find out more",
                href: "/finding-registering",
                attributes: { id: "find-out-more-button" }
              }) }}
              <br/>
              {{ redcrossButton({
                              text: "skip to check eligibility",
                              href: "/check-eligibility",
                              classes: "redcross-button--secondary",
                              attributes: { id: "skip-to-check-button" }
                          }) }}
            </div>
          </div>
      </div>

    </main>
  </div>

{% endblock %}}
