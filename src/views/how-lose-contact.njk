{% from "components/button.njk" import redcrossButton %}
{% from "components/progression.njk" import redcrossProgression %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% extends "_layout.njk" %}

{% block content %}

  <div class="govuk-width-container">
    <main class="govuk-main-wrapper">

      <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
          {{ redcrossProgression({ active: "2"}) }}
        </div>
      </div>

      <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">

          {{ govukBackLink({
                    text: "Back",
                    href: "/check-eligibility",
                    classes: "redcross-back-link"
                }) }}
        </div>
      </div>

      <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">

          <div class="redcross-content__box">
            <h1 class="govuk-heading-xl">How did you lose contact with your family?</h1>

            <form method="POST" action="/director">
              {{ govukRadios({
                  idPrefix: "lose-contact",
                  name: "page",
                  items: [
                      {
                      text: "During war, natural disaster, or on a journey to the UK",
                      value: "where-start-looking"
                      },
                      {
                      text: "Something else, such as adoption or a family dispute",
                      value: "not-eligible"
                      }
                  ]
              }) }}

              {{ redcrossButton({
                text: "check eligibility",
                attributes: { id: "check-eligibility-button" }
              }) }}
            </form>
          </div>
        </div>
      </div>

    </main>
  </div>

{% endblock %}}
