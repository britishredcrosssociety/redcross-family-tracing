{% from "components/button.njk" import redcrossButton %}
{% from "components/progression.njk" import redcrossProgression %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% extends "_layout.njk" %}

{% block content %}

    <div class="govuk-width-container">

        <main class="govuk-main-wrapper">

            <div class="govuk-grid-row">
                <div class="govuk-grid-column-full">
                    {{ redcrossProgression({ active: "1"}) }}
                </div>
            </div>

            <div class="govuk-grid-row">
                <div class="govuk-grid-column-full">

                    {{ govukBackLink({
                    text: "Back",
                    href: "/enquiry",
                    classes: "redcross-back-link"
                }) }}
                </div>
            </div>

            <div class="govuk-grid-row">
                <div class="govuk-grid-column-full">
                    <div class="redcross-content__box">

                        <h1 class="govuk-heading-xl">What help are you looking for today?</h1>

                        {{ govukRadios({
                            idPrefix: "what-help",
                            name: "what-help",                        
                            items: [
                                {
                                text: "Finding family",
                                value: "family-reunion"
                                },
                                {
                                text: "Bringing family safely to the UK",
                                value: "family-to-uk"
                                },
                                {
                                text: "Sending a message to hard to reach relatives",
                                value: "relative-message"
                                }
                            ]
                        }) }}

                         {{ redcrossButton({ text: "Continue" }) }}
                    </div>
                </div>
            </div>

        </main>
    </div>

{% endblock %}}
